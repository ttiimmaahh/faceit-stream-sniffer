{
    "name": "FACEIT Stream Sniffer",
    "description": "Sniff FACEIT for m3u8 links and tokens.",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/apexlogo_16.png",
        "32": "icons/apexlogo_32.png",
        "48": "icons/apexlogo_48.png",
        "128": "icons/apexlogo_128.png"
    },
    "permissions":[
        "tabs",
        "webRequest",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts":[{
        "matches":["*://*/*"],
        "js": ["./js/content-script.js"]
    }],
    "background":{
        "service_worker":"./js/background.js"
    }
}